<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    >



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/love1" />

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >


        <EditText
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#9EFFFFFF"
            android:layout_marginHorizontal="40dp"
            android:hint="@string/enter_first_name"
            android:textColorHint="#2196F3"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:gravity="center" />

            <EditText
            android:paddingHorizontal="40dp"
            android:layout_marginTop="20dp"
            android:id="@+id/textView3"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="#9EFFFFFF"
            android:hint="@string/enter_second_name"
            android:textColorHint="#2196F3"
            android:gravity="center"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/calculate"
                android:layout_marginTop="40dp"
                android:layout_marginHorizontal="90dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="#B4FF9800"
                android:text="Calculate Connection"
                android:textColor="#F7010202"
                app:cornerRadius="80dp"
                app:strokeColor="#00BCD4"/>

        </LinearLayout>
    </RelativeLayout>